<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".sfdghj.SignInActivity">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dataConText"
        android:text="@string/you_are_not_connected_to_internet"
        android:textColor="@color/white"
        android:background="@color/warn_red"
        android:padding="10dp"
        android:visibility="gone"
        android:elevation="1dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/backline"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="472dp"
                android:layout_gravity="center"
                android:background="@drawable/blurbackgraound"
                android:orientation="vertical"
                android:clipToOutline="true"
                android:padding="20dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="15dp"
                    android:text="@string/sign_in"
                    android:textColor="@color/textViewColor1"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/rounded_edittext_focused"
                    android:drawableStart="@drawable/ic_phone_icon_01"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/textViewColor1"
                    android:hint="@string/phone_number"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="12dp"
                    android:singleLine="true"
                    android:textColor="@color/textViewColor1"
                    android:textColorHint="@color/textViewColor1"
                    android:textCursorDrawable="@drawable/ic_cursor"
                    android:textStyle="bold"
                    tools:targetApi="m" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/rounded_edittext_focused">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/in_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawableStart="@drawable/ic_lock_icon_01"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/textViewColor1"
                        android:hint="@string/pass"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="12dp"
                        android:singleLine="true"
                        android:textColor="@color/textViewColor1"
                        android:textColorHint="@color/textViewColor1"
                        android:textCursorDrawable="@drawable/ic_cursor"
                        android:textStyle="bold"
                        tools:targetApi="m" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/pass_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="20dp"
                        android:onClick="passToggle"
                        android:src="@drawable/ic_baseline_visibility_24"
                        android:tint="@color/btnTextColor" />

                </RelativeLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="15dp"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="forPass"
                    android:padding="10dp"
                    android:text="@string/forgot_pass"
                    android:textColor="@color/textViewColor1" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/textViewColor1"
                    android:onClick="SignInBtn"
                    android:paddingVertical="10dp"
                    android:text="@string/sign_in"
                    android:textAllCaps="false"
                    android:textColor="@color/btnTextColor"
                    android:textSize="18sp"
                    app:cornerRadius="23dp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/textViewColor1"
                    android:onClick="registerClick"
                    android:paddingVertical="10dp"
                    android:text="@string/no_account"
                    android:textAllCaps="false"
                    android:textColor="@color/btnTextColor"
                    app:cornerRadius="23dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Contact US"
                    android:textColor="@color/textViewColor1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/whatsappic"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/whatsappicn" />

                    <ImageView
                        android:id="@+id/callic"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/phonecall" />

                    <ImageView
                        android:id="@+id/teleic"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/telegram_logo"
                        android:scaleType="fitCenter" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:indeterminateTint="@color/editTextColor"
        android:visibility="gone"/>


</RelativeLayout>